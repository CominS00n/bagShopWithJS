<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
    integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
  <link rel="stylesheet" href="/assets/css/fontawesome.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.2/css/all.css"
    integrity="sha384-vSIIfh2YWi9wW0r9iZe7RJPrKwp6bG+s9QZMoITbCckVJqGCCRhc+ccxNcdpHuYu" crossorigin="anonymous">

  <!-- CSS -->
  <link rel="stylesheet" href="/stylesheets/style.css">

  <!-- Icon CSS-->
  <link href='https://css.gg/search.css' rel='stylesheet'>
  <link href='https://css.gg/home.css' rel='stylesheet'>

  <!-- javascript -->
  <script src="/javascripts/index.js"></script>

  <title>Document</title>
</head>

<body>
  <div class="header">
    <nav class="row justify-content-md-around p-2">
      <div class="col col-lg-2 p-2">
        <span style="font-size:30px;cursor:pointer" onclick="openNav()">&#9776;</span>
        <!-- <a class="navbar-brand text-uppercase" href="#">ComingS00n Shop</a> -->
      </div>
      <div class="col-lg-4 p-2">
        <form class="form-inline" method="get" action="searchForm">
          <input type="text" name="q" placeholder="Search" value="">
          <button><i class="gg-search"></i></button>
        </form>
      </div>
      <div class="col col-lg-3 p-2">
        <a class="btn text-uppercase" type="submit" href="/">logout</a>
      </div>
    </nav>
  </div>

  <div id="mySidenav" class="sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&#9776;</a>
    <a href="/admin/productForm">Home</a>
    <a href="/insertForm">AddProduct</a>
    <a href="#">Contact</a>
  </div>

  <center>
    <div class="container">
      <div class="row">
        <% items.forEach ( function (item, index ) { %>
          <div class="col-md-3">
            <div class="card my-3">
              <img class="card-img-top" src="/images/<%=item.pd_imageName%>" alt="Product Picture">
              <div class="card-body">
                <p class="card-text font-weight-normal" style="height: 50px;"><%=item.pd_name %></p>
                <p class="card-text font-weight-light" style="height: 100px;"><%=item.pd_detail %></p>
                <p class="card-text">$<%=item.pd_price %></p>
                <div class="btn-group">
                    <a href="/updateForm/<%=item.pd_ID%>" class="btn m-1">Edit</a>
                    <a href="/productForm/<%=item.pd_ID%>" class="btn m-1">Delete</a>
                </div>
              </div>
            </div>
          </div>
          <% } ); %>
      </div>
    </div>
  </center>
</body>
</html>