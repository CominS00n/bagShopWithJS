      <div class="container">
        <div class="mt-2" style="text-align: center;">
            <h4>เพิ่มรายการสินค้า</h4>
            <form method="POST">
              <div class="form-group">
                <div class="text" align="left"> Name : </div>
                <div>
                  <input name="pd_name" class="form-control" />
                </div>
              </div>
              <div class="form-group">
                <div class="text" align="left"> Detail : </div>
                <div>
                  <input name="pd_detail" class="form-control" />
                </div>
              </div>
              <div class="form-group">
                <div class="text" align="left"> Price : </div>
                <div>
                  <input name="pd_price" class="form-control" />
                </div>
              </div>
              <div class="form-group">
                <div class="text" align="left"> Image : </div>
                <div>
                  <input type="file" name="pd_imageName" />
                </div>
              </div>
                <button type="submit">บันทึก</button>
            </form>
        </div>
      </div>
